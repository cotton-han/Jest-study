{
  "env": {
    "es2021": true,
    "node": true,
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:promise/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["jest"],
  "rules": {
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs"],
    "import/newline-after-import": ["error", { "count": 1 }],
    "arrow-parens": ["error", "as-needed"],
    "promise/always-return": "off",
    "max-len" : ["error", {"code": 100, "ignoreRegExpLiterals": true, "ignoreComments": true}]
  }
}
